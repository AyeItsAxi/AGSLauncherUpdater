<Window x:Class="AGSLauncherUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGSLauncherUpdater"
        mc:Ignorable="d"
        Title="MainWindow" Height="210" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid Background="Black">
        <TextBlock HorizontalAlignment="Center" Margin="0,27,0,0" TextWrapping="Wrap" Text="The AveryGame launcher has an update!" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="36" Width="664" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="Wrap" Text="Please stand by while the update is automatically installed..." VerticalAlignment="Top" Foreground="#FFBBBBBB" FontFamily="Segoe UI Semilight" FontSize="18" Width="664" TextAlignment="Center"/>
        <ProgressBar Name="PB" HorizontalAlignment="Center" Height="17" Margin="0,146,0,0" VerticalAlignment="Top" Width="589" Background="{x:Null}" BorderBrush="#FF7F7F7F" Foreground="#FFAFAFAF"/>
        <TextBlock Name="PBT" HorizontalAlignment="Center" Margin="0,168,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="#FFA2A2A2"/>

    </Grid>
</Window>
